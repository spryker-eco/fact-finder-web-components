{% extends template('widget') %}

{% block body %}
    <ff-record-list {{ _widget.recordListConfig|raw }}>
        <ff-record {{ _widget.recordConfig|raw }}>
            {% verbatim %}
                <div data-redirect="{{record.Deeplink}}"
                     data-redirect-target="_blank">
                    <img data-image="{{record.ImageName}}">
                    <span>{{record.Title}}</span>
                </div>
            {% endverbatim %}
        </ff-record>
    </ff-record-list>
{% endblock %}
