{% extends template('widget') %}

{% block body %}

    {% if _widget.items %}
        <ff-checkout-tracking>
            {% for item in _widget.items %}
                <ff-checkout-tracking-item record-id="{{ item.id|raw }}" count="{{ item.quantity|raw }}"></ff-checkout-tracking-item>
            {% endfor %}
        </ff-checkout-tracking>
    {% endif %}


{% endblock %}