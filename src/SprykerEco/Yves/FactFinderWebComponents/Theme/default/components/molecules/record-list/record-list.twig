{% extends model('component') %}

{% define config = {
    name: 'record-list',
    tag: 'record-list'
} %}

{% define data = {
    properties: {
        component: '',
        record: ''
    }
} %}

{% block body %}
    <div class="box">
        <ff-record-list {{ data.properties.component|raw }}>

            {% block record %}
                <ff-record {{ data.properties.record|raw }}>
                    {% verbatim %}
                        <div data-redirect="{{record.Deeplink}}"
                             data-redirect-target="_blank">
                            <img data-image="{{record.ImageName}}">
                            <span>{{record.Title}}</span>
                        </div>
                    {% endverbatim %}
                </ff-record>
            {% endblock %}

        </ff-record-list>
    </div>
{% endblock %}
