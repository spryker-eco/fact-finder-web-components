{% extends model('component') %}

{% define config = {
    name: 'sortbox',
    tag: 'sortbox'
} %}

{% define data = {
    properties: {
        component: '',
        items: []
    }
} %}

{% block body %}
    <div class="box">
        <ff-sortbox {{ data.properties.component|raw }}>

            {% for item in data.properties.items %}
                <ff-sortbox-item key="{{ item.key }}">
                    <span>{{ item.title | trans }}:
                        {% verbatim %}
                            {{description}}
                        {% endverbatim %}
                    </span>
                </ff-sortbox-item>
            {% endfor %}

        </ff-sortbox>
    </div>
{% endblock %}
